<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/btn_top_margin"
    tools:context="com.pg.customersupport.TicketDetails">

    <TextView
        android:id="@+id/ticket_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:text="@string/ticket_id"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticket_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/appbar_padding_top" />

    <TextView
        android:id="@+id/response_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:text="@string/response"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/appbar_padding_top" />
</LinearLayout>
