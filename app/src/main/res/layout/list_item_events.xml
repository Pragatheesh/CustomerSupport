<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/meta_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/button_radius"
        android:paddingLeft="@dimen/button_radius"
        android:paddingRight="@dimen/button_radius"
        android:paddingStart="@dimen/button_radius"
        android:textAppearance="?android:textAppearanceSmall" />

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/button_radius"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_small"
        android:background="?android:attr/listDivider" />
</LinearLayout>